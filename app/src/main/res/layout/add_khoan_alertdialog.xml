<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/oneitem1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <Spinner
            android:theme="@style/mySpinnerItemStyle"
            android:id="@+id/spnadd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:drawableRight="@drawable/ic_assignment"
            android:layout_marginTop="8dp"
            android:text="Nhập Loại"
            android:textColorHint="@android:color/white"
            android:textColor="#D3d3d3"/>
        <EditText
            android:textColor="#D3d3d3"
            android:textColorHint="#D3D3D3"
            android:id="@+id/edt_tienadd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:drawableRight="@drawable/ic_money"
            android:gravity="center|start"
            android:hint="Nhập Tiền"
            android:padding="8dp"
            android:textSize="18sp"
            android:inputType="numberSigned"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/edt_ngayadd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:hint="YYYY-MM-DD"
            android:gravity="center|start"
            android:padding="8dp"
            android:textColor="#D3d3d3"
            android:textColorHint="#D3D3D3"
            android:textSize="18sp"
            android:layout_weight="1"/>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/btnDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:src="@drawable/date" />
        </LinearLayout>
        <EditText
            android:id="@+id/alertContent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="4dp"
            android:textColor="#D3d3d3"
            android:textColorHint="#D3D3D3"
            android:hint="Nội Dung:"
            android:inputType="text"
            android:gravity="center|start"
            android:drawableRight="@drawable/ic_text"/>
    </LinearLayout>

</LinearLayout>